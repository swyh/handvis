<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kimyounghoon.handvis.activity.function.UpdateDeviceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IOT 기기 설정"
        android:gravity="center_horizontal"
        android:textSize="30sp"
    />

    <ImageView
        android:id="@+id/update_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/update_name"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:inputType="text"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="손동작 선택"
        android:textSize="25sp"
        android:gravity="bottom|center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/hand_0"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="150dp"
            android:src="@drawable/hand_0"
            />
        <ImageView
            android:id="@+id/hand_1"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="150dp"
            android:src="@drawable/hand_1"
            />
        <ImageView
            android:id="@+id/hand_2"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="150dp"
            android:src="@drawable/hand_2"
            />
        <ImageView
            android:id="@+id/hand_3"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="150dp"
            android:src="@drawable/hand_3"
            />
        <ImageView
            android:id="@+id/hand_4"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="150dp"
            android:src="@drawable/hand_4"
            />
        <ImageView
            android:id="@+id/hand_5"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="150dp"
            android:src="@drawable/hand_5"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/update_succ_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/update_fail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="20sp"
            />
    </LinearLayout>

</LinearLayout>
