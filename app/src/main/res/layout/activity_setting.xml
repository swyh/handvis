<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:text="Server 설정"
        />
    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_port"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_list"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="IP"
            />
        <EditText
            android:id="@+id/et_server_ip"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:hint="서버의 IP를 입력하세요."
            android:inputType="number"
            android:digits="0123456789."
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="PORT"
            />
        <EditText
            android:id="@+id/et_server_port"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:hint="서버의 PORT를 입력하세요."
            android:inputType="number"
            android:digits="0123456789."
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
         <RadioButton
             android:id="@+id/rd_server1"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Server1"
             android:checked="true"
             />
        <RadioButton
            android:id="@+id/rd_server2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Server2"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"

        >
        <Button
            android:id="@+id/bnt_set_ip"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="설정"
            />

        <Button
            android:id="@+id/bnt_cancel_ip"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="돌아가기"
            />

    </LinearLayout>


</LinearLayout>
