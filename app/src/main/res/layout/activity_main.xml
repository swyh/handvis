<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kimyounghoon.handvis.activity.main.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    >
    <ImageButton
        android:id="@+id/fragment_button1"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="80dp"
        android:src="@drawable/camera"
        android:background="@android:color/white"
        />
    <ImageButton
        android:id="@+id/fragment_button2"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="80dp"
        android:src="@drawable/hand_icon"
        android:background="@android:color/white"
        />
    <ImageButton
        android:id="@+id/fragment_button3"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_info_details"
        android:background="@android:color/white"
        />

</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/fragment_line1"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="5dp"
            android:background="@android:color/white"
            />
        <TextView
            android:id="@+id/fragment_line2"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="5dp"
            android:background="@android:color/white"
            />
        <TextView
            android:id="@+id/fragment_line3"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="5dp"
            android:background="@android:color/white"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
